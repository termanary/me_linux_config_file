# shell function :
# argument could get like this:
v ()
{
    # vim -O2 $*
    if [ $# -gt 2 ] ; then
        vim $*
    elif [ $# -le 2 ] ; then
        vim -O $*
    else
        echo 'ERROR'
    fi
}

